<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.1.1//EN" "http://www.opensymphony.com/xwork/xwork-1.1.1.dtd">
<xwork>
	<!-- Configuration for the user package. -->
	<package name="login" extends="default" namespace="/login">
		<action name="login" class="com.rc.portal.webapp.action.LoginAction" method="login">			
			<result name="loadPages" type="freemarker">/WEB-INF/pages/frame/index.ftl</result>
			<result name="login" type="freemarker">/WEB-INF/pages/oss/login.ftl</result>
			<result name="logout" type="redirect">/j_spring_security_logout</result>			
		</action>
		
		<action name="showLogin" class="com.rc.portal.webapp.action.LoginAction" method="showLogin">
			<result name="success" type="freemarker">/WEB-INF/pages/frame/index.ftl</result>	
			<result name="login" type="freemarker">/WEB-INF/pages/oss/login.ftl</result>
			<result name="logout" type="freemarker">/WEB-INF/pages/oss/login.ftl</result>
		</action>
		
		<action name="showTop" class="com.rc.portal.webapp.action.LoginAction" method="loadTop">				
			<result name="top" type="freemarker">/WEB-INF/pages/frame/top.ftl</result>			
			<interceptor-ref name="loginStack" />
		</action>
		<action name="showCenter" class="com.rc.portal.webapp.action.LoginAction" method="loadCenter">				
			<result name="center" type="freemarker">/WEB-INF/pages/inc/center.ftl</result>
			<interceptor-ref name="loginStack" />		
		</action>
		
		<action name="showDown" class="com.rc.portal.webapp.action.LoginAction" method="loadDown">				
			<result name="down" type="freemarker">/WEB-INF/pages/inc/down.ftl</result>	
			<interceptor-ref name="loginStack" />
		</action>
		
		<action name="showLeft" class="com.rc.portal.webapp.action.LoginAction" method="loadLeft">				
			<result name="left" type="freemarker">/WEB-INF/pages/frame/left.ftl</result>		
			<interceptor-ref name="loginStack" />
		</action>
		
		<action name="showRight" class="com.rc.portal.webapp.action.LoginAction" method="loadRight">				
			<result name="right" type="freemarker">/WEB-INF/pages/frame/right.ftl</result>	
			<interceptor-ref name="loginStack" />
		</action>
	</package>
</xwork>