	SELECT 
	t.*,(SELECT COUNT(0) FROM nbig_table n WHERE n.cid = t.id ) AS isexist,
	(SELECT GROUP_CONCAT(b.id,"-",b.category_name,"-",(SELECT COUNT(0) FROM nbig_table n WHERE n.cid = b.id )) FROM t_category b WHERE parent_id =(t.id)) AS childs
